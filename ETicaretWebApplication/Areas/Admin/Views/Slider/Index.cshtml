@model IEnumerable<ETicaret_Core.Entities.Slider>

@{
    ViewData["Title"] = "Sldier Yönetimi";
}

<p>
    <a asp-action="Create" class="btn btn-outline-primary" style="margin-left:20px;">Kullanıcı Ekle</a>
</p>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    <a href="/image_client/Slider/@item.Image">
                        <img src="/image_client/Slider/@item.Image" alt="" height="50"/>
                    </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Link)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-sm btn-warning" style="color:white">Düznele</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-sm btn-info" style="color:white">Listele</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>